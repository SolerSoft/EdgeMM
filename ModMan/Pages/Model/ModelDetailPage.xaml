<?xml version="1.0" encoding="utf-8" ?>
<mvvm:ViewPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvvm="clr-namespace:SolerSoft.Mvvm"
             xmlns:vm="clr-namespace:ModMan.ViewModels"
             x:TypeArguments="vm:ModelDetailVM"
             x:Class="ModMan.Pages.ModelDetailPage"
             Title="ModelDetailPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Path=Model.Name.Value}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</mvvm:ViewPage>